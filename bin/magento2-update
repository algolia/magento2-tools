#!/bin/bash

set -e

CURRENT_VERSION=v0.1.7

get_latest_release() {
  curl --silent "https://api.github.com/repos/algolia/magento2-tools/releases/latest" | # Get latest release from GitHub api
    grep '"tag_name":' |                                            # Get tag line
    sed -E 's/.*"([^"]+)".*/\1/'                                    # Pluck JSON value
}

echo "Current version: " "$CURRENT_VERSION"
echo "Latest version: " "$CURRENT_VERSION"

if [ "$(get_latest_release)" != "$CURRENT_VERSION" ]
then
    echo "Updating to latest version..."
    composer global update algolia/magento2-tools && echo "Latest vesion is now installed, please re-run the command again."
fi
