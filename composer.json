{
    "name": "algolia/magento2-tools",
    "description": "Tools for magento 2 developers",
    "keywords": ["php", "magento", "tools"],
    "license": "MIT",
    "authors": [
        {
            "name": "Algolia Team",
            "email": "contact@algolia.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "phpstan/phpstan": "^0.11.16"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.packagist.org"
        }
    ],
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "platform": {
            "php": "7.2.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Algolia\\AlgoliaSearch\\": "../"
        },
        "files": [
            "../$MAGENTO_DIR/vendor/algoliasearch-magento-2/registration.php",
            "../$MAGENTO_DIR/vendor/autoload.php"
        ]
    },
    "scripts": {
        "lint": "php-cs-fixer fix --config=.php_cs --allow-risky=yes ../$MAGENTO_DIR/vendor/algoliasearch-magento-2",
        "test:lint": "@lint --dry-run",
        "test:types": "phpstan analyse --configuration='phpstan.neon' ../$MAGENTO_DIR/vendor/algoliasearch-magento-2",
        "test": [
          "@test:lint",
          "@test:types"
        ]
    }
}
