{
    "name": "algolia/magento2-tools",
    "description": "Tools for magento 2 developers",
    "keywords": ["php", "magento", "tools"],
    "license": "MIT",
    "authors": [
        {
            "name": "Algolia Team",
            "email": "contact@algolia.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "bitexpert/phpstan-magento": "dev-master",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.11.16",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.packagist.org"
        },
        {
            "type": "vcs",
            "url": "https://github.com/algolia/phpstan-magento"
        }
    ],
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "bin": [
        "bin/magento2-lint",
        "bin/magento2-test",
        "bin/magento2-types",
        "bin/magento2-php-compatibility",
        "bin/magento2-update"
    ]
}
